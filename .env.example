# ============================================
# EL ARMARIO - SaaS Platform Configuration
# ============================================

# Application
NODE_ENV=production
PORT=3012
NEXT_PUBLIC_APP_NAME="El Armario"
NEXT_PUBLIC_APP_URL=https://elarmario.com.do

# Database (PostgreSQL)
DATABASE_URL=postgresql://stepperslife:securepass123@localhost:5432/elarmario

# MinIO Object Storage (Isolated)
MINIO_ENDPOINT=localhost
MINIO_PORT=9012
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=elarmario
NEXT_PUBLIC_MINIO_ENDPOINT=https://elarmario.com.do

# ============================================
# Clerk Authentication (clerk.com)
# ============================================
# Sign up methods: Google OAuth + Magic Link (passwordless)
# Get keys from: https://dashboard.clerk.com

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
CLERK_SECRET_KEY=sk_test_YOUR_KEY_HERE

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Clerk Settings to Enable in Dashboard:
# ✅ Google OAuth
# ✅ Email (Magic Link)
# ✅ Email verification required

# ============================================
# Resend Email Service (resend.com)
# ============================================
# Get API key from: https://resend.com/api-keys

RESEND_API_KEY=re_YOUR_KEY_HERE
RESEND_FROM_EMAIL=noreply@elarmario.com.do
RESEND_FROM_NAME="El Armario"

# Email templates
RESEND_WELCOME_TEMPLATE_ID=
RESEND_NOTIFICATION_TEMPLATE_ID=

# ============================================
# NextAuth (Session Management)
# ============================================

NEXTAUTH_URL=https://elarmario.com.do
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE

# Generate with: openssl rand -base64 32

# ============================================
# SaaS Features
# ============================================

# Stripe (for payments - optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# ============================================
# Security
# ============================================

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://elarmario.com.do

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# ============================================
# Feature Flags
# ============================================

ENABLE_SIGNUP=true
ENABLE_GOOGLE_LOGIN=true
ENABLE_MAGIC_LINK=true
MAINTENANCE_MODE=false
